<div class="row mt-3">
    <div class="col-sm">
        <!--Spacing--> 
    </div>
    <div class="col-sm-6">
        <div class="text-center mb-4 h5">Restock Parts Form
            <ol class="list-unstyled">
                <li class="my-3">
                    <form action="/partRequest/restockOrder" method="POST">
                        <label for="searchword">Part Info</label></br>
                        <div class="form-group p-2 text-left">
                            <% if (restockAS) { %>
                                <strong class="pr-2">Stocked As: </strong> <%= restockAS %><br>
                            <% } %>
                            <% if (restockdescription1) { %>
                                <strong class="pr-2">Description: </strong> <%= restockdescription1 %><br>
                            <% } %>
                            <% if (restocksapNumber) { %>
                                <strong class="pr-2">SAP Number: </strong> <%= restocksapNumber %><br>
                            <% } %>
                            
                        </div>
                        <div class="form-group p-2 text-center">
                            <label for="searchword">Requested By</label>
                            <input class="form-control my-3" type="text" name="requestor" placeholder="Name" />
                            <input class="form-control my-3" type="text" name="quantity" placeholder="Quantity" />
                            <input type="hidden" name="stockedAS" value="<%=restockAS%>"/>
                            <input type="hidden" name="description1" value="<%=restockdescription1%>"/>
                            <input type="hidden" name="sapNumber" value="<%=restocksapNumber%>"/>
                            </br>
                            <button class="btn btn-danger m-2" type="submit">Submit Restock Order</button>
                        </div>
                    </form>
                </li>
            </ol>
    </div>
    </div>
    <div class="col-sm">
        <!--Spacing--> 
    </div>
</div>