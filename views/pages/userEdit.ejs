<div class="row mt-3">
    <div class="col-sm">
        <!--Spacing--> 
    </div>
    <div class="col-sm-6">
		<div class="card card-body text-center">
			<h1 class="text-center mb-3">Change Password</h1>
			<%- include ("../partials/messages"); %>
			<form action="userUpdate" method="POST">
				<div class="form-group">
					<label for="email">Email</label>
					<input
					type="email"
					id="email"
					name="email"
					class="form-control"
					placeholder="Enter Email"
					value="<%= typeof email != 'undefined' ? email : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="password">Old Password</label>
					<input
					type="password"
					id="password"
					name="password"
					class="form-control"
					placeholder="Old Password"
					value="<%= typeof password != 'undefined' ? password : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="password2">New Password</label>
					<input
					type="password"
					id="password2"
					name="password2"
					class="form-control"
					placeholder="New Password"
					value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="password3">Comfirm New Password</label>
					<input
					type="password"
					id="password3"
					name="password3"
					class="form-control"
					placeholder="Comfirm New Password"
					value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
					/>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Save Password</button>
			</form>
			<a class="btn btn-secondary m-2" href="/">Back to home page</a>
		</div>
    </div>
    <div class="col-sm">
        <!--Spacing--> 
    </div>
</div>
<script src="/static/scripts/jquery-3.3.1.slim.min.js"></script>
<script src="/static/scripts/popper.min.js"></script>
<script src="/static/scripts/bootstrap.min.js"></script>